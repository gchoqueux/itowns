{
    "compilerOptions": {
        "target": "esnext",
        /* Type Checking */
        "strict": true,
        /* Modules */
        "baseUrl": ".",
        "module": "esnext",
        "lib": ["DOM", "esnext"],
        // "moduleResolution": "Bundler",
        /* Emit */
        /* JavaScript Support */
        "allowJs": true,
        "checkJs": false, // set to true for type checking of js files
        /* Interop Constraints */
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        /* Language and Environment */
        // "target": "ESNext",
        /* Completeness */
        "skipLibCheck": true,
        "jsx": "preserve",
        "sourceMap": true,
        "noEmit": true,
        "declarationMap": true,
        "declaration": true
    },
    "files": [],
    "references": [
        { "path": "./packages/Geographic" },
        { "path": "./packages/Main" }
    ]
}
